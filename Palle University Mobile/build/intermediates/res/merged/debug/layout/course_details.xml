<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    	 xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical" >
         	<android.support.v7.widget.CardView
     			android:id="@+id/cv0"
     			android:layout_width="match_parent"
     			android:layout_height="0dp"
                android:layout_weight="3">
     		<LinearLayout
     	    android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:background="@drawable/course_fee_border"
         	android:orientation="vertical" >

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal" >
                    <TextView android:id="@+id/title"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Purchase with"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        />
                    <CheckBox
                        android:id="@+id/payWithSd"
                        android:layout_width="0dp"
                        android:text="SD Card"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"/>
                    <ImageView
                        android:id="@+id/sdCardImage"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:src="@drawable/ic_sd_card_black_24dp"/>
                    <CheckBox
                        android:id="@+id/payWithPenDrive"
                        android:layout_width="0dp"
                        android:text="Pen Drive"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"/>
                    <ImageView
                        android:id="@+id/penDriveImage"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:src="@drawable/pen_drive_black_small"/>
					<CheckBox
						android:id="@+id/payWithWebAccess"
						android:layout_width="0dp"
						android:text="Web Access"
						android:layout_height="wrap_content"
						android:layout_weight="2"/>
					<ImageView
						android:id="@+id/webImage"
						android:layout_width="0dp"
						android:layout_gravity="center"
						android:layout_height="wrap_content"
						android:layout_weight=".5"
						android:src="@drawable/ic_web_black_24dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/border"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:text=""
                    android:layout_margin="5dp"
                    android:background="#eeeeee"
                    />
     		<LinearLayout
                android:id="@+id/courseDetails"
     		android:layout_weight="1"
     	    android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_marginLeft="5dp"
         	android:orientation="horizontal" >
         	<TextView android:id="@+id/coursename"
		                   android:layout_width="0dp"
		                   android:layout_weight="1"
                           android:gravity="center"
         				   android:layout_height="match_parent"
         				   android:text="Course\nName"
         				   android:textColor="#000000"
         				   android:textStyle="bold"
				android:layout_marginLeft="-15dp"
		          />
         	<TextView android:id="@+id/priceinr"
		                   android:layout_width="0dp"
		                   android:layout_weight="1"
                           android:gravity="center"
         				   android:layout_height="match_parent"
         				   android:text="Price in\nINR"
         				   android:textColor="#000000"
         				   android:textStyle="bold"
		          />
         	<TextView android:id="@+id/priceusd"
				android:layout_marginLeft="-15dp"
		                   android:layout_width="0dp"
		                   android:layout_weight="1"
                           android:gravity="center"
         				   android:layout_height="match_parent"
         				   android:text="Price in\nUSD"
         				   android:textColor="#000000"
         				   android:textStyle="bold"
		          />
                <TextView android:id="@+id/unused"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />

                <!--         	<ImageView
                                android:layout_marginTop="5dp"
                                android:id="@+id/sdCardImage"
                                android:layout_width="0dp"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_sd_card_black_24dp"/>-->
<!--
            <ImageView
                android:layout_marginTop="5dp"
                    android:id="@+id/pendDriveImage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:src="@drawable/pen_drive_black_small"/>
-->

            </LinearLayout>
     		<LinearLayout
                android:id="@+id/courseFeeDetails"
     		android:layout_weight="2"
     		android:layout_marginTop="5dp"
     		android:background="#dff0d8"   
     		android:layout_marginLeft="5dp" 
     	    android:layout_width="match_parent"
        	android:layout_height="0dp"
         	android:orientation="horizontal" >

				<LinearLayout android:layout_height="match_parent"
					android:layout_width="0dp"
					android:layout_weight="3"


					android:background="@drawable/my_shape2"

					android:orientation="horizontal">

					<TextView
						android:id="@+id/courseTitle"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:textColor="#000000"
						android:text="C# for\nFreshers" />
					<LinearLayout  android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:orientation="vertical" >
						<TextView
							android:id="@+id/textView6"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_margin="5dp"
							android:text="$9999"
                            android:gravity="center"
							android:textColor="#f00"/>

						<TextView
							android:id="@+id/textView16"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_margin="5dp"
							android:text="\u20B9 7991"
							android:textColor="#000"/>
					</LinearLayout>
					<LinearLayout  android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:orientation="vertical" >
						<TextView
							android:id="@+id/textView7"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
							android:layout_margin="5dp"
							android:text="$444"
							android:textColor="#f00"/>

						<TextView
							android:id="@+id/textView17"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_margin="5dp"
                            android:paddingLeft="5dp"
							android:text="$150"
							android:textColor="#000"/>
					</LinearLayout>
				</LinearLayout>

				<Button android:id="@+id/enroll"
		                   android:layout_width="0dp"
		                   android:layout_weight="1"
         				   android:layout_height="match_parent"
         				   android:text="Enroll"
         				   android:textColor="#ffffff"
         				   android:background="#337ab7"
         				   
		          />
         	
     		</LinearLayout>
     					
     		</LinearLayout>
     		</android.support.v7.widget.CardView>
     		
         	<android.support.v4.view.ViewPager
         	    android:id="@+id/mypager"
         	    android:layout_width="match_parent"
         	    android:layout_height="0dp"
                android:layout_weight="8">
         	    <android.support.v4.view.PagerTabStrip
         	        android:id="@+id/mypager_header"
         	        android:layout_width="match_parent"
         	        android:layout_height="wrap_content"
         	        android:layout_gravity="top">
         	        
         	    </android.support.v4.view.PagerTabStrip>
         	</android.support.v4.view.ViewPager>
	</LinearLayout>
	